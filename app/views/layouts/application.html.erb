<!DOCTYPE html>
<html>
  <head>
    <title>RemitanoTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">
          <i class="fa fa-home" aria-hidden="true"></i> Funny Movie
        </a>
        <% if current_user %>
          <div class="form-inline">
            <span class="navbar-text mr-sm-2">
              Welcome <%= current_user.email %>
            </span>
            <%= link_to "Share a movie", new_video_path, class: "btn btn-success mr-sm-2" %>
            <%= link_to "Log Out", logout_path, class: "btn btn-warning mr-sm-2" %>
          </div>
        <% else %>
          <%= form_tag sessions_path, class: "form-inline" do |form| %>
            <%= text_field_tag :email, "", class: "form-control mr-sm-2", placeholder: "Email" %>
            <%= password_field_tag :password, "", class: "form-control mr-sm-2", placeholder: "Password" %>
            <%= submit_tag "Login / Register", class: "btn btn-primary my-2 my-sm-0" %>
          <% end %>
        <% end %>
      </div>
    </nav>
    <div class="container py-md-3">
      <%= yield %>
    </div>
  </body>
</html>
