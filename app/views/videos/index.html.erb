<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>
<% if @videos.any? %>
  <% @videos.each do |video| %>
    <div class="row">
      <% if video %>
        <div class="col-md-4">
          <div class="thumbnail">
            <%= link_to image_tag(
              "https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg",
              alt: video.title,
              class: "img-rounded img-fluid"),
              "https://www.youtube.com/watch?v=#{video.uid}", target: "_blank" %>
          </div>
        </div>
        <div class="col-md-8">
          <div class="caption">
            <h5><%= video.title %></h5>
            <p>Shared by <%= video.user.email %></p>
            <p>
            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i> <%= video.likes %>
          <i class="fa fa-thumbs-o-down" aria-hidden="true"></i> <%= video.dislikes %>
            </p>
            <p><%= video.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
